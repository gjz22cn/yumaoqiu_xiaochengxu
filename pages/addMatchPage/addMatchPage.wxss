/* pages/addMatchPage/addMatchPage.wxss */
page{
  background: #fff;
}
.header_bar{
  text-align: center;
  background-color: rgb(242,242,242);
  height: 50rpx;
  line-height:50rpx;
}

.addTap{
  margin-top:20rpx;
  margin-left:20rpx;
}

.addTap image{
  width:30rpx;
  height: 30rpx;
}

.addTap i{
  color: rgb(10, 159, 236);
  font-style:italic;
  line-height: 30rpx;
  font-size:30rpx;
}

.info_item{
  padding:10rpx 16rpx;
  border-bottom: 1px solid rgb(242,242,242);
  height:30rpx;
  position:relative;
}



.icon{
  right:0;
  position:absolute;
  top:4rpx;
}

.icon image{
  width:30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}